<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share project_config)/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share project_config)/include/test1/test1.rviz"/>
    <arg name="config_file" value="$(find-pkg-share project_maps)/test1/test1.building.yaml"/>
    <!-- <arg name="dashboard_config_file" value="$(find-pkg-share config_dashboard_resources)/test1/dashboard_config.json"/> -->
  </include>

  <!-- Tinyrobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share project_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share project_maps)/maps/test1/nav_graphs/5.yaml" />
      <arg name="config_file" value="$(find-pkg-share project_config)/config/test1/tinyRobot_config.yaml"/>
    </include>
  </group>

</launch>
